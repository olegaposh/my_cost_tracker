<div class="container-fluid ">
  <div class="row section1">
    <div class="col-sm-6">
      <h1 class="mycosttracktext">
        <img src="images/icon-project-task.png" id="costtrackicon">
        My Cost Tracker
      </h1>
    </div>
    <div class="col-md-2 ">
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-2 ">
      <br>
      <p>{{user}}</p>
      <br>
      <a href="/logout" class="btn btn-success">Log Out</a>
    </div>
  </div>
  <br>
  <div class="container">
    
      <div class="col-md">
        
        {{#if user}}
        
      </div>
    </div>



    <div class="row">
      <div class="col-md-10 p-5 text-center">
        <h3>My Transactions</h3>
      </div>
      <div class="col-md-2">
        <a href="/addTransaction?userid={{id}}" class="btn btn-success">New Transaction</a>
      </div>
    </div>

    <div class="row text-center">
      <div class="col-md">
        {{!-- STORE NAME --}}
        <h5>Store Name</h5>
        {{#each userTransactions}}
        <p class="p-3">{{this.dataValues.shop_name}}</p>
        {{/each}}
      </div>
      <div class="col-md">
        {{!-- AMOUNT --}}
        <h5>Purchase Amount</h5>
        {{#each userTransactions}}
        <p class="p-3">{{this.dataValues.amount}}</p>
        {{!-- <p>{{this.dataValues.id}}</p> --}}
        {{/each}}
      </div>
      <div class="col-md">
        {{!-- DATE --}}
        <h5>Date of Purchase</h5>
        {{#each userTransactions}}
        <p class="p-3">{{this.dataValues.date}}</p>
        {{/each}}
      </div>
      {{!-- EDIT BUTTON  --}}
      <div class="col-md">
          {{#each userTransactions}}
          <div class="p-3">
          <a href="/editTransaction?tranId={{this.dataValues.id}}&userId={{../id}}"><button class="btn btn-warning">Edit</button></a>
        </div>
        {{/each}}
      </div>
      {{!-- DELETE BUTTON --}}
      <div class="col-md">
        {{#each userTransactions}}
        <div class="p-3">
          <button data-id={{this.dataValues.id}} class="deleteButton btn btn-danger">Delete</button>
        </div>
        {{/each}}
      </div>

    </div>
    <div class="row">
      <div class="col-md p-5">
        {{else}}
        <p>Please <a href="/login">log in</a>.</p>
        {{/if}}
      </div>
    </div>
  </div>
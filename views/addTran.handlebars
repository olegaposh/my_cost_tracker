<div class="container">

    <div class="row text-center">
        <div class="col-md">
            <h1>New Transaction</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form id="add"> 
                <div class="form-group">
                    <label for="date">Date</label>
                    <input id="dateInput" type="text" class="form-control" placeholder="">
                </div>

                <div class="form-group">
                    <label for="amount">Amount</label>
                    <input id="amountInput" type="text" class="form-control" placeholder="">
                </div>

                <div class="form-group">
                    <label for="storeName">Store Name</label>
                    <input id="storeName" type="text" class="form-control" placeholder="">
                </div>


                <button id="addButton" data-id={{id}} type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

</div>